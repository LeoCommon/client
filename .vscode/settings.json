{
    "makefile.extensionOutputFolder": "./.vscode",
    "go.testFlags": ["-count=1", "--race"],
    "go.lintOnSave": "workspace",
    "go.vetOnSave": "workspace",
    "go.testOnSave": false,
    "go.coverOnSave": false,
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "editor.formatOnSave": true,
    "go.liveErrors": {
        "enabled": true,
        "delay": 500,
    },
    "todo-tree.regex.regexCaseSensitive": false,
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "BUG",
        "REMOVEME",
        "WIP",
    ],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "info",
            "gutterIcon": true,
            "iconColour": "#2a8000",
        },
        "FIXME": {
            "iconColour": "#FDE541",
            "gutterIcon": true
        },
        "REMOVEME": {
            "icon": "alert",
            "iconColour": "#cc1515",
            "gutterIcon": true
        },
        "WIP": {
            "icon": "file-diff",
            "iconColour": "#ffa500",
            "gutterIcon": true
        }
    },
    "go.useLanguageServer": true,
    "gopls": {
        "ui.codelenses": {
            "generate": true,
            "regenerate_cgo": true,
            "test": true,
            "vendor": true,
            "tidy": true,
            "upgrade_dependency": true,
            "gc_details": true,
            "run_govulncheck": true
        },
        "ui.diagnostic.annotations": {
            "bounds": true,
            "inline": true,
            "escape": true,
            "nil": true
        },
        "ui.diagnostic.staticcheck": true,
        "ui.diagnostic.analyses": {
            "nilness": true,
            "unusedwrite": true,
            "unusedvariable": true,
            "unusedparams": true,
            "fieldalignment": true,
            "shadow": true,
            "useany": true,
        },
    },
}